{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PL/0 Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "--purge",
                "--compile",
                "--link",
                "--optimize",
                "${input:optimizationLevel}",
                "--export",
                "--source",
                "${input:exampleFile}",
                "--target",
                "build"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "exampleFile",
            "type": "pickString",
            "description": "Select the PL/0 example file to run",
            "default": "examples/playground.pl0",
            "options": [
                "examples/playground.pl0",
                "examples/nesting.pl0",
                "examples/procedures.pl0",
                "examples/comments.pl0",
                "examples/conditions.pl0",
                "examples/errors.pl0",
                "examples/expressions.pl0",
                "examples/recursions.pl0",
                "examples/utf8.pl0"
            ]
        },
        {
            "id": "optimizationLevel",
            "type": "pickString",
            "description": "Select optimization level",
            "default": "debug",
            "options": [
                "debug",
                "release"
            ]
        }
    ]
}
