{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build PL/0 Compiler with Bash",
			"type": "shell",
			"command": "bash",
			"args": [
				"scripts/build-compiler.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"linux": {
				"options": {
					"shell": {
						"executable": "/bin/bash",
						"args": [
							"-c"
						]
					}
				}
			}
		}
	]
}